<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add3_place2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petpository_v1.Sitter.Add3PlaceActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progressthree"
                android:id="@+id/progressthree"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel"
                android:textSize="18dp"
                android:id="@+id/telnumtag"
                android:layout_below="@+id/progressthree"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telnum"
                android:layout_below="@+id/telnumtag"
                android:layout_marginLeft="15dp"
                android:width="300dp"
                android:maxLines="1"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textSize="18dp"
                android:id="@+id/webtag"
                android:layout_below="@+id/telnum"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/web"
                android:hint="www.yourwebsitename.com"
                android:layout_marginLeft="15dp"
                android:width="300dp"
                android:layout_below="@+id/webtag"
                android:maxLines="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textSize="18dp"
                android:id="@+id/fbtag"
                android:layout_below="@+id/web"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fb"
                android:text="www.fb.com/yourFBName"
                android:layout_below="@+id/fbtag"
                android:layout_marginLeft="15dp"
                android:width="300dp"
                android:maxLines="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line"
                android:textSize="18dp"
                android:id="@+id/linetag"
                android:layout_below="@+id/fb"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/line"
                android:width="300dp"
                android:maxLines="1"
                android:inputType="text"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/linetag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram :"
                android:textSize="18dp"
                android:id="@+id/instatag"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/line"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/insta"
                android:width="300dp"
                android:paddingTop="8dp"
                android:hint="without @"
                android:layout_below="@+id/instatag"
                android:layout_marginLeft="15dp"
                android:maxLines="1"
                android:inputType="text"/>
            </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:orientation="horizontal"
        android:background="#E91E63">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backtotwo"
            android:background="@drawable/button_custom"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#E91E63">
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:id="@+id/saveBt"
            android:background="@drawable/button_custom"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


    </LinearLayout>

</RelativeLayout>
