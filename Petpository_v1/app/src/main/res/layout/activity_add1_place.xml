<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petpository_v1.Sitter.Add1PlaceActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progressone"
                android:id="@+id/progressone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Name"
                android:id="@+id/placenametag"
                android:textSize="18dp"
                android:layout_below="@+id/progressone"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placename"
                android:layout_below="@+id/placenametag"
                android:layout_marginLeft="15dp"
                android:width="300dp"
                android:maxLines="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/addresstag"
                android:textSize="18dp"
                android:layout_below="@+id/placename"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_alignLeft="@+id/placename"
                android:layout_below="@+id/addresstag"
                android:enabled="false"
                android:width="300dp"
                android:maxLines="1"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailtag"
                android:text="Detail"
                android:textSize="18dp"
                android:layout_below="@+id/address"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail"
                android:width="300dp"
                android:layout_alignLeft="@+id/placename"
                android:layout_below="@+id/detailtag"
                android:maxLines="6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addImgtag"
                android:text="Add Image"
                android:textSize="18dp"
                android:layout_below="@+id/detail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_collections_black_24dp"
                android:id="@+id/imgBtnAddImg"
                android:layout_below="@+id/detail"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:onClick="createImageBuffer"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:background="#E91E63">
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="next >"
            android:onClick="nexttwoonClick"
            android:id="@+id/nexttotwo"
            android:background="@drawable/button_custom"
            android:textColor="#ffffff"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
